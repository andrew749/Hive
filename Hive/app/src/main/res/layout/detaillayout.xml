<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/namePlace"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duration"
        android:id="@+id/durationView"
        android:layout_below="@+id/namePlace"
        android:layout_alignLeft="@+id/namePlace"
        android:layout_alignStart="@+id/namePlace"
        android:layout_marginBottom="20dip"

        android:textColor="#000"/>
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="400dip"
class="com.google.android.gms.maps.MapFragment"
        android:layout_below="@id/durationView"
        android:id="@+id/map"
        android:background="#000"/>

    <Button
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:text="X"
        android:textSize="40dip"
        android:id="@+id/deleteButton"
        android:layout_alignTop="@+id/namePlace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FF0000"
        android:background="@drawable/round_button"/>


</RelativeLayout>